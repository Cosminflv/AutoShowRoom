<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#142537"
    android:padding="16dp">

    <!-- Imagine -->
    <ImageView
        android:id="@+id/imagePlayerDetail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <!-- Nume și poziție -->
    <TextView
        android:id="@+id/textFullNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zlatan Ibrahimovic"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textPositionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forward"
        android:textColor="#BBBBBB"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Statistici -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/textGamesDetail"
                android:text="14"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="Games"
                android:textColor="#CCCCCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/textGoalsDetail"
                android:text="8"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="Goals"
                android:textColor="#CCCCCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/textAgeDetail"
                android:text="33"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="Age"
                android:textColor="#CCCCCC"    android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Informații club -->
    <TextView
        android:text="Full Name"
        android:textColor="#CCCCCC"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textFullNameLabel"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>
    <TextView android:text="Club"
        android:textColor="#CCCCCC"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/textTeamDetail"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:text="Nationality"
        android:textColor="#CCCCCC"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/textNationalityDetail"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Buton pentru detalii -->
    <Button
        android:id="@+id/buttonMoreDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:layout_gravity="center"
        android:backgroundTint="#ff0d4679"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
