<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back"
        android:contentDescription="@string/back_button_desc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp" />

    <!-- Brand Name -->
    <TextView
        android:id="@+id/brandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand Name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true" />

    <!-- Brand Logo -->
    <ImageView
        android:id="@+id/brandLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:layout_below="@id/brandName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/toyota" /> <!-- Placeholder -->

    <!-- Country -->
    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country: Unknown"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/brandLogo"
        android:layout_marginTop="8dp" />

    <!-- Founded Year -->
    <TextView
        android:id="@+id/foundedYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Founded: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/country"
        android:layout_marginTop="8dp" />

    <!-- Cars Count -->
    <TextView
        android:id="@+id/carsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cars Count: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/foundedYear"
        android:layout_marginTop="8dp" />

    <!-- See More Button -->
    <Button
        android:id="@+id/seeMoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/goToWebButton"
        android:layout_marginEnd="8dp" />

    <!-- Go to Web Page Button -->
    <Button
        android:id="@+id/goToWebButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Web Page"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
