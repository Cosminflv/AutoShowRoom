<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#142537"
    android:padding="16dp">

    <!-- Car Image -->
    <ImageView
        android:id="@+id/imageCarDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <!-- Model Name -->
    <TextView
        android:id="@+id/textModelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>

    <!-- Brand Name -->
    <TextView
        android:id="@+id/textBrandDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textColor="#BBBBBB"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Car Specifications -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/textAgeDetail"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="Age"
                android:textColor="#CCCCCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView android:id="@+id/textMileageDetail"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="Mileage"
                android:textColor="#CCCCCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Fuel Type -->
    <TextView android:text="Fuel Type"
        android:textColor="#CCCCCC"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/textFuelTypeDetail"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Color -->
    <TextView android:text="Color"
        android:textColor="#CCCCCC"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/textColorDetail"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Button for more details -->
    <Button
        android:id="@+id/buttonMoreDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:layout_gravity="center"
        android:backgroundTint="#ff0d4679"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
